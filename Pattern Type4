import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int t=2*a-1;
		for(int i=0; i<a; i++) {
		    for(int j=0; j<t; j++){
		        System.out.print("*");
		    }
		    t=t-2;
		    System.out.println();
		}
	}
}
