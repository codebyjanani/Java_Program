import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		for(int i=0; i<a; i++) {
		    for(int j=0; j<a; j++){
		        if(j==0||i<=a/2&&i+j==a/2||i>a/2&&i-j==a/2) {
		        System.out.print("* ");
		    }
		    else{
		        System.out.print("  ");
		    }
		    }
		    System.out.println();
		}
	}
}
