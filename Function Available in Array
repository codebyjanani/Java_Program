int[] a = {1,2,3}; 
int[] b = Arrays.copyOf(a,5);//o.p [1,2,3,0,0]

int[] a = {10,20,30,40,50};
int[]  b = Arrays.copyOfRange(a,1,4); //o.p: [20,30,40]

int[] a = new int[5];
Arrays.fill(a,7); //o.p:[7,7,7,7,7]

int[] a = {1,2,3};
int[] b = {1,2,3};
System.out.println(Arrays.equals(a,b)); //o.p:true 

//a==b then the output will wrong due to memory address
